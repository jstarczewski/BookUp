<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:text="Before you start scanning the text, we would like to tell you that text-scanner component does not take photos, store images. Scanner only extracts the text from live-view camera mode. We do not store any of user data, cLake."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:textAlignment="center"
        android:typeface="monospace"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="I understand!"
        android:textSize="20sp"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:id="@+id/button3" />
</RelativeLayout>