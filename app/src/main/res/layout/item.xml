<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fadingEdge="vertical"
    android:requiresFadingEdge="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/titel"
            android:visibility="visible"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:text="Titel"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:typeface="monospace"
            android:layout_marginLeft="@dimen/card_view_text_margin"
            android:layout_marginRight="@dimen/card_view_text_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:id="@+id/textX"
            android:visibility="visible"
            android:text="text"
            android:layout_below="@+id/titel"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/eTextTitel"
            android:text="Enter Titel"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/card_view_text_margin"
            android:layout_marginRight="@dimen/card_view_text_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:inputType="textMultiLine"
            android:typeface="monospace"
            android:text="enter note"
            android:layout_below="@+id/eTextTitel"
            android:id="@+id/eTextNOte"
            android:layout_marginLeft="@dimen/card_view_text_margin"
            android:layout_marginRight="@dimen/card_view_text_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_delete_orange_500_24dp"
            android:layout_alignParentTop="true"
            android:visibility="visible"
            android:background="#FFFFFF"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/card_view_text_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_alignEnd="@id/editTextTitel"
            android:layout_alignParentEnd="true"
            android:id="@+id/imageButton" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_drop_down_orange_500_48dp"
            android:id="@+id/imageView3"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/imageButton" />


    </RelativeLayout>


</android.support.v7.widget.CardView>