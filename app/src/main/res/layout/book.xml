<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bookCardView"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/titel"
            android:visibility="visible"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:text="Long clickte to edit"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_view_author_margin"
            android:layout_marginRight="@dimen/card_view_text_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:id="@+id/author"
            android:textColor="@color/colorAccent"
            android:textSize="18dp"
            android:visibility="visible"
            android:text="Tap to go to specific notes"
            android:layout_below="@+id/titel"
            android:layout_centerHorizontal="true" />








        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/editTextTitel"
            android:text="Long click again on the edge of the note to save"
            android:textColor="@color/colorPrimaryDark"

            android:textSize="20sp"
            android:layout_marginLeft="@dimen/card_view_text_margin"
            android:layout_marginRight="@dimen/card_view_text_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/editTextAuthor"
            android:text="Three lines to save titel, author, and some info"
            android:layout_below="@id/editTextTitel"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/card_view_text_margin"
            android:layout_marginRight="@dimen/card_view_text_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:inputType="textMultiLine"
            android:typeface="monospace"
            android:textColor="#000000"
            android:text=""
            android:layout_below="@+id/editTextAuthor"
            android:id="@+id/editTextNote"
            android:layout_marginLeft="@dimen/card_view_text_margin"
            android:layout_marginRight="@dimen/card_view_text_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_delete_orange_500_24dp"
            android:layout_alignParentTop="true"
            android:visibility="visible"
            android:background="#FFFFFF"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/card_view_text_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_alignEnd="@id/editTextTitel"
            android:layout_alignParentEnd="true"
            android:id="@+id/imageButton" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_drop_down_orange_500_48dp"
            android:id="@+id/imageView4"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:typeface="monospace"
            android:layout_marginLeft="@dimen/card_view_text_margin"
            android:layout_marginRight="@dimen/card_view_text_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:id="@+id/info"
            android:visibility="visible"
            android:text="basic info here!"
            android:layout_below="@+id/author"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>


</android.support.v7.widget.CardView>